#!/bin/bash
# Recipe for Dotfiles Setup

# Conventions:
# Put a '/' at the end of dir paths to signal it's type.

_link "shell/"                          ".config/shell"
_link "shell/profile"                   ".profile"

_link "config/zsh/zshrc"                ".zshrc"
_link "config/bash/bashrc"              ".bashrc"
_link "config/starship/starship.toml"   ".config/starship.toml"
_link "config/alacritty/"               ".config/alacritty"
_link "config/wezterm/"                 ".config/wezterm"
_link "config/kitty/"                   ".config/kitty"
_link "config/tmux/"                    ".config/tmux"
_link "config/git/config"               ".gitconfig"
_link "config/vim/"                     ".config/vim"
_link "config/rofi/"                    ".config/rofi"
_link "config/weechat/"                 ".config/weechat"
_link "config/mangohud/MangoHud.conf"   ".config/MangoHud/MangoHud.conf"
_link "config/chromium/flags.conf"      ".config/chromium-flags.conf"
_link "config/chromium/flags.conf"      ".config/electron-flags.conf"
_link "config/ignore/fd"                ".fdignore"
_link "config/ignore/rg"                ".rgignore"

_link "systemd/user/"                   ".config/systemd/user"

_link "desktop/Xresources"              ".Xresources"
_link "desktop/mimeapps.list"           ".config/mimeapps.list"
_link "desktop/user-dirs.dirs"          ".config/user-dirs.dirs"

_link "templates/"                      ".templates"

