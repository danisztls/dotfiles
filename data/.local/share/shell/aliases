# auto color
#alias ls='ls --color=auto'
alias ls='exa'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias diff='colordiff'
alias ps='grc ps'
# nvim
alias vim='nvim'
alias vimdiff='nvim -d'

# shortcuts
alias "b=browser"
alias "q=exit"
alias "v=nvim"

# fzf-special
alias "fhid=fzf-specifal hidden" # hidden files
alias "fmd=fzf-special md" # markdown files
alias "fpdf=fzf-special pdf" # pdf and postscript files
alias "fvid=fzf-special media" # videos and audio
alias "full=fzf-special full" # full text search
alias "fcd=fzf-special cd" # directories
alias "fps=fzf-special ps" # processes

# Terminal to SVG
alias "ttsvg=termtosvg -c=bash -t ~/.config/termtosvg/nebula.svg"

# 7z
alias "7zcrypt=7z a -t7z -m0=lzma2 -mx=9 -mfb=64 -md=32m -ms=on -mhe=on -p"

# trash-cli
alias "rm=trash"

# no overwrites
alias "mv=mv -n"
alias "cp=cp -n"

# git
alias "g=git"
alias "gstat=git status"
alias "gadd=git add"
alias "gdiff=git diff"
alias "gpull=git pull"
alias "gpush=git commit && git push"
