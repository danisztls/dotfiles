[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[alias]
# upper and lower case just for contrast as git treat them equally
# lower case is mode and upper are options 
    a      = add
    aA     = add --all
    br     = branch
    brD    = branch --delete
    brDF   = branch --delete --force
    c      = commit
    cA     = commit --amend
    co     = checkout
    cp     = cherry-pick
    d      = diff
    ds     = diff --staged
    f      = fetch
    fA     = fetch --all
    l      = log
    lO     = log --pretty=oneline
    lD     = log --decorate --graph
    m      = merge
    pu     = pull
    ps     = push
    psF    = push --force-with-lease
    r      = rebase
    rI     = rebase -i
    rf     = reflog
    s      = status
    ss     = show
    sl     = shortlog
    t      = tag
    t      = tag -s

[merge]
	tool = vimdiff

[init]
	defaultBranch = main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[user]
	signingkey = F01BCA9BE4937F59B2AF899699265C42D8308B04 
	name = Daniel Souza
	email = danisztls@gmail.com

[commit]
	gpgsign = true
