[alias]
  # note: aliases are case insensitive
  a     =  add
  aa    =  add --all
  b     =  branch
  bd    =  branch --delete
  bf    =  branch --delete --force
  c     =  commit
  ca    =  commit --amend
  co    =  checkout
  cp    =  cherry-pick
  d     =  diff
  ds    =  diff --staged
  f     =  fetch
  fa    =  fetch --all
  l     =  log
  lo    =  log --pretty=oneline
  ld    =  log --decorate --graph
  m     =  merge
  ma    =  merge --abort
  mc    =  merge --continue
  mt    =  mergetool --prompt
  pl    =  pull
  ps    =  push
  psf   =  push --force-with-lease
  rv    =  review
  rs    =  reset
  rb    =  rebase
  rba   =  rebase --abort
  rbc   =  rebase --continue
  rbi   =  rebase -i
  rmc   =  rm --cached
  rf    =  reflog
  s     =  status
  ss    =  show
  sl    =  shortlog
  t     =  tag
  ts    =  tag -s

[diff]
  colorMoved = default

[merge]
  tool = nvimdiff

[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

