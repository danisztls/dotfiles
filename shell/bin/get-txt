#!/bin/bash
#
# Download any content (videos currently) from the web

# @author: Daniel Souza <me@posix.dev.br>
# @license: MIT
# @usage: get-txt <URL>
# @deps: yt-dlp
#
#
url="$1"
id=${url##*v=}
lang="en,pt"

yt-dlp -f none --ignore-no-formats-error --write-sub --sub-langs "$lang" --output "$id" "$url" 2>/dev/null
