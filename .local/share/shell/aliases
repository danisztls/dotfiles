# auto color
alias ls='ls --color=auto'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias diff='colordiff'

# nvim
alias vim='nvim'
alias vimdiff='nvim -d'

# x clipboard
#alias "c=xclip -selection clipboard"
#alias "v=xclip -o"

# shortcuts
alias "b=chromium"
alias "q=exit"
alias "v=nvim"
alias "f=nautilus"
alias "m=nautilus"

# fzf
prev="bat --style=numbers --color=always --line-range :500 {}"
alias 'f=rg -t md --files | fzf --preview "$prev"' # markdown files only
alias "fh=rg -iuu -g '!.git/**' -g '!.cache/**' --files | fzf --preview '$prev'" # hidden and ignored

# 7z
alias "7zcrypt=7z a -t7z -m0=lzma2 -mx=9 -mfb=64 -md=32m -ms=on -mhe=on -p"

# trash-cli
alias "rm=trash"

# git
alias "gstat=git status"
alias "gadd=git add"
alias "gdiff=git diff"
alias "gpull=git pull"
alias "gpush=git commit && git push"
