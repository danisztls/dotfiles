# auto color
#alias ls='ls --color=auto'
alias ls='exa'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias diff='colordiff'

# nvim
alias vim='nvim'
alias vimdiff='nvim -d'

# x clipboard
#alias "c=xclip -selection clipboard"
#alias "v=xclip -o"

# shortcuts
alias "b=browser"
alias "q=exit"
alias "v=nvim"
alias "f=nautilus"
alias "m=nautilus"

# fzf
alias "fh=fzf-expert hidden" # hidden and ignored
alias "fmd=fzf-expert md" # markdown files only
alias "fpdf=fzf-expert pdf" # pdf and postscript files only
alias "fvideo=fzf-expert video" # videos only

# 7z
alias "7zcrypt=7z a -t7z -m0=lzma2 -mx=9 -mfb=64 -md=32m -ms=on -mhe=on -p"

# trash-cli
alias "rm=trash"

# no overwrites
alias "mv=mv -n"
alias "cp=cp -n"

# git
alias "g=git"
alias "gstat=git status"
alias "gadd=git add"
alias "gdiff=git diff"
alias "gpull=git pull"
alias "gpush=git commit && git push"
