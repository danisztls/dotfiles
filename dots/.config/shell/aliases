# colorized output
#alias ls='ls --color=auto'
alias ls='exa'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias diff='colordiff'
alias ps='grc ps'

# file management
alias rm='trash -v' # move to trash
alias mv='mv -v -n' # verbose and don't overwrite
alias cp='cp -v -n'

# neovim
alias v='nvim'
alias vim='nvim'
alias vimdiff='nvim -d'

# pacman
alias p='pacman'
alias yays='yay --editmenu --mflags --skipinteg' # ask to edit PKGBUILD and skip integrity checks

# root
alias god='sudo -i'
alias s='sudo'

# systemctl
alias 's?=systemctl status'
alias 's#=systemctl restart'
alias 's!=systemctl stop'
alias 'su?=systemctl --user status'
alias 'su#=systemctl --user restart'
alias 'su!=systemctl --user stop'

# git
alias g='git'
alias 'g?=git status'
alias 'g%=git diff'
alias 'g+=git add'
alias 'g#=git commit'
alias 'g-:==git pull'
alias 'g:-==git push'
alias 'g:=git log'
alias yolo="git add -A && git commit -m YOLO && git push origin master"

# common shortcuts
alias b='browser'
alias q='exit'

# fzf
alias f='fzf-special hidden' # hidden files
alias fmd='fzf-special md' # markdown files
alias fpdf='fzf-special pdf' # pdf and postscript files
alias fvid='fzf-special media' # videos and audio
alias full='fzf-special full' # full text search
alias fcd='fzf-special cd' # directories
alias fps='fzf-special ps' # processes

# Journal
alias jt='journal-tasks'
alias jl='journal-log'

# clear cache
alias clear-cache='sync; echo 3 > /proc/sys/vm/drop_caches'

# feh fit window
alias feh='feh --scale-down --auto-zoom'

# use gopass
alias pass='gopass'

# attach to weechat session
alias irc='tmux -L weechat a'

# terminal to svg
alias ttsvg='termtosvg -c=bash -t ~/.config/termtosvg/nebula.svg'

# encrypted 7z
alias 7zcrypt='7z a -t7z -m0=lzma2 -mx=9 -mfb=64 -md=32m -ms=on -mhe=on -p'

# open by default application
alias xo='xdg-open'
