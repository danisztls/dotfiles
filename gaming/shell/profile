# Preferred
export EDITOR="nvim"
export VISUAL="urxvt -e nvim" # alacritty has double the latency ~0.5s
export LESS="-R " # colorize output
export BROWSER="chromium"

# XDG
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

## Steam
export STEAM_LINUX_RUNTIME_VERBOSE=1
export PRESSURE_VESSEL_VERBOSE=1

## MangoHUD
export MANGOHUD=1

## Gallium
# export GALLIUM_HUD=GPU-load,cpu,fps  # makes Steam crash

## Vulkan
# check https://github.com/doitsujin/dxvk
# export DXVK_HUD="fps,memory,gpuload,scale=1"
export DXVK_FRAME_RATE="144"

# Path
export PATH=/bin:/usr/bin/:/usr/local/bin
export PATH=$PATH:$HOME/.local/bin
